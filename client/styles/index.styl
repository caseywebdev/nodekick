@import 'config'

global-reset()

html
body
  height 100%
  width 100%

img
canvas
  vertical-align bottom

body
  text-size-adjust 100%
  font-family 'Helvetica Neue', Arial, Helvetica, 'Lucida Grande', sans-serif
  font-size 12px
  overflow hidden
  color #666
  background #fff
  text-align center

a
.clickable
  text-decoration none
  color #08f
  cursor pointer
  &:hover
    text-decoration underline

#game
  transform scale(0.5) translate(-50%, -50%)
  width 200%
  height 200%
  canvas
    margin auto
    position absolute
    width 100%
    top 0
    bottom 0
    right 0
    left 0
    &:before
      content ''
      display block
      padding-top 56.25%

.js-mobile .desktop-only
  display none

.js-desktop .mobile-only
  display none

.move-ack
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  margin auto
  width 200px
  height 400px
  opacity 0
  &.js-transition
    transition-duration .25s
    transition-timing-function ease-in-out
    transition-property opacity transform
  &.js-flash
    opacity 1
    &.js-up
      transform translateY(25px)
    &.js-left
      transform translate(25px, -25px) scaleX(-1)
    &.js-right
      transform translate(-25px, -25px)
  &.js-up
    background-position -200px 0
  &.js-left
    background-position 200px 0
    transform scaleX(-1)
  &.js-right
    background-position 200px 0

.session-info
  z-index 1
  top 0
  right 0
  position fixed
  text-align right

@keyframes flashy
  from
    background #fff
  to
    background #08f

.sign-in-with-twitter
.user-info
  overflow auto
  margin-top 5px
  border-radius left 5px
  box-shadow 0 1px 3px rgba(0, 0, 0, .75)
  background #fff

.sign-in-with-twitter
  padding 5px
  animation flashy .25s infinite alternate

.user-info
  .avatar
    float left
    width 48px
    height 48px
    border-bottom-left-radius 5px
    box-shadow 0 1px 3px rgba(0, 0, 0, .5)
  .username-and-sign-out
    padding 5px 10px
    display inline-block
    text-align center
    .username
      display block
      font-size 16px
      margin-bottom 5px
      color #666

#stage
  width 1280px
  position absolute
  left 50%
  margin-left -640px
  z-index -200

@keyframes message
  2%
    transform scale(3)
  100%
    transform translateY(-400%) scale(.5)
    opacity 0

.js-message
  position fixed
  bottom 70%
  width 100%
  font-size 46px
  text-transform uppercase
  font-family 'Piedra' sans-serif
  text-shadow 0 1px 1px rgba(0, 0, 0, .75)
  color #a00
  animation message 3s
  img
    width 48px
    height 48px
    margin-right 10px
    border-radius 5px
    box-shadow 0 1px 1px rgba(0, 0, 0, .75)

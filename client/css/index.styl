@import 'nib'

global-reset()

img
  vertical-align bottom

body
  text-size-adjust 100%
  font-family 'Helvetica Nueue', Arial, Helvetica, 'Lucida Grande', sans-serif
  font-size 12px
  overflow hidden
  color #666
  background #02070d

a
  text-decoration none
  color #08f
  &:hover
    text-decoration underline

.js-mobile .desktop-only
  display none

.js-desktop .mobile-only
  display none

#stage
  display block
  margin 0 auto
  background-image url('/images/background-final-destination.jpg')
  background-size 100%

.move-ack
  width 200px
  height 400px
  background url('/images/kick-sprite.png')
  opacity 0
  &.js-transition
    transition-duration .25s
    transition-timing-function ease-in-out
    transition-property opacity transform
  &.js-flash
    opacity 1
    &.js-up
      transform translateY(25px)
    &.js-left
      transform translate(25px, -25px) scaleX(-1)
    &.js-right
      transform translate(-25px, -25px)
  &.js-up
    background-position -200px 0
  &.js-left
    background-position 200px 0
    transform scaleX(-1)
  &.js-right
    background-position 200px 0

.sign-in-with-twitter
.user-info
  top 0
  right 0
  position fixed
  background #fff
  border-bottom-left-radius 5px
  box-shadow 0 1px 3px rgba(0, 0, 0, .75)
  overflow auto

@keyframes flashy
  from
    background #fff
  to
    background #08f

.sign-in-with-twitter
  padding 5px
  animation flashy .25s infinite alternate

.user-info
  .avatar
    float left
    width 48px
    height 48px
    border-bottom-left-radius 5px
    box-shadow 0 1px 3px rgba(0, 0, 0, .5)
  .username-and-sign-out
    padding 5px 10px
    display inline-block
    text-align center
    .username
      display block
      font-size 16px
      margin-bottom 5px
      color #666


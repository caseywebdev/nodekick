@import 'nib'

global-reset()

html
body
  height 100%

img
  vertical-align bottom

body
  text-size-adjust 100%
  font-family 'Helvetica Nueue', Arial, Helvetica, 'Lucida Grande', sans-serif
  font-size 12px
  overflow hidden
  color #666
  background #02070d
  text-align center

a
  text-decoration none
  color #08f
  &:hover
    text-decoration underline

.js-mobile .desktop-only
  display none

.js-desktop .mobile-only
  display none

#stage
  background-image url('/images/background-nighttime.png')
  background-size 100%

.move-ack
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  margin auto
  width 200px
  height 400px
  background url('/images/dive-sprite.png')
  opacity 0
  &.js-transition
    transition-duration .25s
    transition-timing-function ease-in-out
    transition-property opacity transform
  &.js-flash
    opacity 1
    &.js-up
      transform translateY(25px)
    &.js-left
      transform translate(25px, -25px) scaleX(-1)
    &.js-right
      transform translate(-25px, -25px)
  &.js-up
    background-position -200px 0
  &.js-left
    background-position 200px 0
    transform scaleX(-1)
  &.js-right
    background-position 200px 0

.top-right-corner
  top 0
  right 0
  position fixed
  text-align right

@keyframes flashy
  from
    background #fff
  to
    background #08f

.sign-in-with-twitter
.user-info
.nko-vote-container
  background #fff
  border-bottom-left-radius 5px
  box-shadow 0 1px 3px rgba(0, 0, 0, .75)
  overflow auto

.nko-vote-container
  display inline-block
  margin-top 5px
  border-radius left 5px
  padding 5px
  text-align right

.nko-vote
  display block
  width 115px
  height 25px

.sign-in-with-twitter
  padding 5px
  animation flashy .25s infinite alternate

.user-info
  .avatar
    float left
    width 48px
    height 48px
    border-bottom-left-radius 5px
    box-shadow 0 1px 3px rgba(0, 0, 0, .5)
  .username-and-sign-out
    padding 5px 10px
    display inline-block
    .username
      display block
      font-size 16px
      margin-bottom 5px
      color #666

@keyframes message
  2%
    transform scale(3)
    opacity 1
  100%
    transform translateY(-200px) scale(.5)
    opacity 0


.alerts
  position: fixed
  bottom: 70%
  width: 100%
  font-size: 4em
  font-weight 900
  text-transform uppercase
  font-family 'Piedra' cursive;
  text-shadow 0 1px 3px rgba(0, 0, 0, .75)
  .alert
    animation message 5s

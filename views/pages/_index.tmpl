<!DOCTYPE html>

<html>

  <head>
    <meta
      name='viewport'
      content='width=device-width,initial-scale=1.0,user-scalable=no'
    >
    <meta name='apple-mobile-web-app-capable' content='yes'>
    <title>NodeKick</title>
    <link href='/index.css' rel='stylesheet'>
    <link href='http://fonts.googleapis.com/css?family=Piedra' rel='stylesheet' type='text/css'>
    <script src='/index.js'></script>
    <% if (o.req.user) { %>
    <script>window.app.currentUserId = <%= o.req.user.id %>;</script>
    <% } %>
  </head>

  <body>
    <div class='top-right-corner'>
      <% if (o.req.user) { %>
      <div class='user-info'>
        <a href='https://twitter.com/<%- o.req.user.get('username') %>'>
          <img src='<%- o.req.user.get('avatar') %>' class='avatar'>
        </a>
        <div class='username-and-sign-out'>
          <a
            href='https://twitter.com/<%- o.req.user.get('username') %>'
            class='username'
          >@<%- o.req.user.get('username') %></a>
          <a href='/auth/sign-out' class='sign-out'>Sign Out</a>
        </div>
      </div>
      <% } else { %>
      <div class='sign-in-with-twitter'>
        <a href='/auth/twitter'>
          <img src='/images/sign-in-with-twitter.png' class='twitter'>
        </a>
      </div>
      <% } %>
      <div class='nko-vote-container'>
        <iframe
          src='http://nodeknockout.com/iframe/team-us'
          allowtransparency
          class='nko-vote'
        ></iframe>
      </div>
    </div>
    <div id='scoreboard'></div>
    <div id="deathDiv" style="display: none">
      <canvas id="deathCanvas" width="100" height="200"></canvas>
    </div>
    <canvas id='stage' class='desktop-only' width='1280' height='700'></canvas>
    <ul class='alerts'></ul>
    <div class='mobile-only js-move-ack move-ack'></div>

    <div style="display: none;"> <!-- Scratch canvases -->
      <canvas id="dive-invert" width="600" height="400" style="border: solid 1px #000;" />
      <canvas id="donatello-invert" width="600" height="400" style="border: solid 1px #000;" />
      <canvas id="redacted-invert" width="600" height="400" style="border: solid 1px #000;" />
    </div>

  </body>
</html>
